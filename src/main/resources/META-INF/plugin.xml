<idea-plugin>
    <id>it.frob.sleighidea</id>
    <name>SleighIDEA</name>
    <version>0.1</version>
    <vendor email="a.gatti@frob.it" url="https://github.com/agatti/sleighidea">Alessandro Gatti</vendor>

    <description><![CDATA[Sleigh syntax highlighter for IntelliJ IDEA.]]></description>

    <change-notes><![CDATA[]]></change-notes>

    <idea-version since-build="212.5457"/>

    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <fileType name="Sleigh File" implementationClass="it.frob.sleighidea.SleighFileType"
                  fieldName="INSTANCE" language="Sleigh" extensions="slaspec;sinc"/>
        <lang.braceMatcher language="Sleigh"
                           implementationClass="it.frob.sleighidea.SleighBraceMatcher"/>
        <lang.parserDefinition language="Sleigh" implementationClass="it.frob.sleighidea.SleighParserDefinition"/>
        <lang.psiStructureViewFactory language="Sleigh"
                                      implementationClass="it.frob.sleighidea.structure.ViewFactory"/>
        <lang.syntaxHighlighterFactory language="Sleigh"
                                       implementationClass="it.frob.sleighidea.SleighSyntaxHighlighterFactory"/>
        <colorSettingsPage implementation="it.frob.sleighidea.SleighColourSettingsPage"/>
        <annotator language="Sleigh" implementationClass="it.frob.sleighidea.SleighAnnotator"/>
        <lang.foldingBuilder language="Sleigh"
                             implementationClass="it.frob.sleighidea.SleighFoldingBuilder"/>
        <lang.commenter language="Sleigh" implementationClass="it.frob.sleighidea.SleighCommenter"/>

        <!-- Inspections (errors) -->

        <localInspection language="Sleigh" shortName="DuplicateDefaultSpaceDefinition"
                         displayName="Duplicate default space definition"
                         groupName="Sleigh" enabledByDefault="true" level="ERROR"
                         implementationClass="it.frob.sleighidea.inspections.DuplicateDefaultSpaceDefinitionInspection"/>
        <localInspection language="Sleigh" shortName="DuplicateSpaceDefinition" displayName="Duplicate space definition"
                         groupName="Sleigh" enabledByDefault="true" level="ERROR"
                         implementationClass="it.frob.sleighidea.inspections.DuplicateSpaceDefinitionInspection"/>
        <localInspection language="Sleigh" shortName="UnknownVarnodedefSpace" displayName="Unknown variables node space"
                         groupName="Sleigh" enabledByDefault="true" level="ERROR"
                         implementationClass="it.frob.sleighidea.inspections.UnknownVarnodedefSpaceInspection"/>
        <localInspection language="Sleigh" shortName="DuplicateVarnodeEntries" displayName="Duplicate space variables"
                         groupName="Sleigh" enabledByDefault="true" level="ERROR"
                         implementationClass="it.frob.sleighidea.inspections.DuplicateVarnodeEntriesInspection"/>
    </extensions>

    <actions>
    </actions>

</idea-plugin>